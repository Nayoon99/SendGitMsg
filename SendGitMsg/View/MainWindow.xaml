<Window x:Class="SendGitMsg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendGitMsg" 
        xmlns:vm="clr-namespace:SendGitMsg.ViewModel"
        mc:Ignorable="d"
        Title="Git 커밋 자동 체크 프로그램" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>

        <!-- DataGrid Column Header -->
        <Style x:Key="CustomDataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F1F3F6"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </Window.Resources>


    <Grid Background="#F4F6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0"
            Background="White"
            Padding="20"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Git 커밋 체크"
                           FontSize="20"
                           FontWeight="Bold"/>
                    <TextBlock Text="전날 커밋 개수를 확인하고 메시지를 전송합니다"
                           Foreground="Gray"
                           FontSize="12"/>
                    <TextBlock Text="{Binding StatusMsg}"
                           Foreground="#4F7DF3"
                           FontSize="12"
                           Margin="0,6,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                    Content="커밋 체크"
                    Command="{Binding CheckCommitCommand}"
                    IsEnabled="{Binding CanCheckCommit}"
                    Width="120"
                    Height="36"
                    VerticalAlignment="Center"
                    Background="#4F7DF3"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- 본문 -->
        <Border Grid.Row="1"
            Margin="20"
            Background="White"
            CornerRadius="8"
            Padding="10">
            <DataGrid ItemsSource="{Binding Records}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  CanUserAddRows="False"
                  CanUserResizeRows="False"
                  RowHeight="38"
                  FontSize="13"
                  Background="Transparent"
                  BorderThickness="0"
                  AlternatingRowBackground="#F9FAFC"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  ColumnHeaderStyle="{StaticResource CustomDataGridHeader}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="날짜" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="커밋 수" Binding="{Binding CommitCnt}" Width="*"/>
                    <DataGridTextColumn Header="SMS 상태" Binding="{Binding SmsStts}" Width="*"/>
                    <DataGridTextColumn Header="Slack 상태" Binding="{Binding SlackStts}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>


</Window>
