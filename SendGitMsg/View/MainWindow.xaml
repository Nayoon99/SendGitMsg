<Window x:Class="SendGitMsg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SendGitMsg" 
        xmlns:vm="clr-namespace:SendGitMsg.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 버튼 영역 -->
        <Button Grid.Row="0"
                Content="커밋 체크"
                Command="{Binding CheckCommitCommand}"
                Width="120"
                Height="30"
                HorizontalAlignment="Left"
                Margin="10"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Records}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="날짜" Binding="{Binding Date}" Width="*"/>
                <DataGridTextColumn Header="커밋 수" Binding="{Binding CommitCnt}" Width="*"/>
                <DataGridTextColumn Header="SMS 상태" Binding="{Binding SmsStts}" Width="*"/>
                <DataGridTextColumn Header="Slack 상태" Binding="{Binding SlackStts}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
